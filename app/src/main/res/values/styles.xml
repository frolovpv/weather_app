<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GeneralTextViewStyle"  parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="SearchView.Default">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="SearchView">
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:colorActivatedHighlight">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
    </style>




</resources>